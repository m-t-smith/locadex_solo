<h1 class="text-center mb-3">{{title}}</h1>
<form action="/buildings" method="POST" class="mb4">
    <div class="form-group">
        <label for="building"></label>
        <input type="text" name="building" id="building" class="form-control" >
    </div>
    
    <input type="submit" value="View Building" class="btn btn-primary btn-block">
</form>
<form action='/buildings/insertInfo' method="POST" class="mb4" >
    <div class="form-group">
        <select name="tableSelected">
		    <option value="buildings">Buildings</option>
		    <option value="faculty">Faculty</option>
		    <option value="courses">Courses</option>
		    <option value="utilities">Utilities</option>
	    </select> 
        
	</div>    
    <input type="submit" name="table" placeholder="Insert Values" class="btn btn-primary btn-block">
    
</form>
<script>
    function insertForm(){
        switch(document.getElementById("tableSelected")) {
            case 'buildings':
                document.write("you selected buildings");
                break;
            case 'faculty':
                document.write("you selected faculty");
                break;
            case 'courses':
                document.write("you selected courses");
                break;
            case 'utilities':
                document.write("you selected utilities");
                break;
            default:
                
        }
    }
</script>
